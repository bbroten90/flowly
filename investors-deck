import React, { useState } from 'react';

const FlowlyPitchDeck = () => {
  const [currentSlide, setCurrentSlide] = useState(1);
  const totalSlides = 17;

  const nextSlide = () => {
    if (currentSlide < totalSlides) {
      setCurrentSlide(currentSlide + 1);
    }
  };

  const prevSlide = () => {
    if (currentSlide > 1) {
      setCurrentSlide(currentSlide - 1);
    }
  };

  // Styling constants
  const colors = {
    navy: '#0A0A23',
    teal: '#00D1B2',
    aqua: '#29ABE2',
    lightGrey: '#F7F8FA',
    white: '#FFFFFF',
    grey: '#6B7280',
    green: '#2ECC71',
    red: '#E53E3E',
    orange: '#FF8C42'
  };

  // Common components
  const SlideContainer = ({ children, bgColor = colors.white }) => (
    <div className="relative w-full aspect-[16/9] rounded-lg shadow-lg overflow-hidden" style={{ backgroundColor: bgColor }}>
      {children}
    </div>
  );

  const SlideHeader = ({ title, subtitle, center = false, light = false }) => (
    <div className={`${center ? 'text-center' : ''} mb-4`}>
      <h2 className={`text-2xl font-bold ${light ? 'text-white' : 'text-navy'}`}>{title}</h2>
      {subtitle && <p className={`text-lg mt-2 ${light ? 'text-gray-300' : 'text-gray-600'}`}>{subtitle}</p>}
    </div>
  );

  const GradientBackground = ({ children }) => (
    <div className="absolute inset-0 overflow-hidden" style={{ 
      background: `linear-gradient(135deg, ${colors.navy} 0%, #1a1a4e 100%)`,
      zIndex: -1 
    }}>
      <div className="absolute right-0 top-0 transform translate-x-1/4 -translate-y-1/4">
        <div className="w-96 h-96 bg-teal opacity-10 rounded-full blur-3xl"></div>
      </div>
      <div className="absolute left-0 bottom-0 transform -translate-x-1/4 translate-y-1/4">
        <div className="w-96 h-96 bg-aqua opacity-10 rounded-full blur-3xl"></div>
      </div>
      {children}
    </div>
  );

  const Card = ({ title, children, icon }) => (
    <div className="bg-white p-4 rounded-lg shadow-sm">
      {icon && (
        <div className="flex items-center mb-2">
          <div className="flex-shrink-0 h-8 w-8 rounded-full bg-teal bg-opacity-10 flex items-center justify-center mr-2">
            <i className={`fas ${icon} text-teal`}></i>
          </div>
          <h3 className="text-lg font-medium text-navy">{title}</h3>
        </div>
      )}
      {!icon && <h3 className="text-lg font-medium text-navy mb-2">{title}</h3>}
      <div className="text-gray-600 text-sm">{children}</div>
    </div>
  );

  const PieChart = ({ data }) => {
    // Simple visual representation
    return (
      <div className="w-64 h-64 rounded-full relative mx-auto my-4" style={{ background: `conic-gradient(
        ${colors.teal} 0% ${data[0].percentage}%, 
        ${colors.navy} ${data[0].percentage}% ${data[0].percentage + data[1].percentage}%,
        ${colors.aqua} ${data[0].percentage + data[1].percentage}% 100%
      )` }}>
        <div className="absolute inset-0 flex items-center justify-center">
          <div className="bg-white w-32 h-32 rounded-full"></div>
        </div>
        <div className="absolute right-0 -bottom-24 space-y-1">
          {data.map((item, i) => (
            <div key={i} className="flex items-center text-xs">
              <div className="w-3 h-3 mr-1" style={{ backgroundColor: item.color }}></div>
              <span>{item.label}: {item.percentage}%</span>
            </div>
          ))}
        </div>
      </div>
    );
  };

  const BarChart = ({ data, title }) => {
    const maxValue = Math.max(...data.map(d => d.value));
    
    return (
      <div className="mt-4">
        {title && <h4 className="text-sm font-medium text-navy mb-2">{title}</h4>}
        <div className="space-y-3">
          {data.map((item, i) => (
            <div key={i}>
              <div className="flex justify-between text-xs mb-1">
                <span>{item.label}</span>
                <span className="font-medium">{item.value}{item.unit}</span>
              </div>
              <div className="h-2 w-full bg-gray-200 rounded-full overflow-hidden">
                <div 
                  className="h-full rounded-full" 
                  style={{ 
                    width: `${(item.value / maxValue) * 100}%`,
                    backgroundColor: item.color || colors.teal 
                  }}
                ></div>
              </div>
            </div>
          ))}
        </div>
      </div>
    );
  };

