      <div className="flex-shrink-0 mt-1">
        <div className={`h-5 w-5 rounded-full ${checked ? 'bg-green-100' : 'bg-red-100'} flex items-center justify-center`}>
          <i className={`fas ${checked ? 'fa-check text-green-500' : 'fa-times text-red-500'} text-xs`}></i>
        </div>
      </div>
      <div className="ml-2 text-sm text-gray-600">{text}</div>
    </div>
